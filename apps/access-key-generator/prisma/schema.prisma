generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
}

enum AccessKeyType {
  LIMITED
  ADMIN
}

model UserAccessKey {
  id        String        @id @default(cuid())
  hash      String        @unique
  type      AccessKeyType
  expiry    DateTime
  ratelimit Int
}
